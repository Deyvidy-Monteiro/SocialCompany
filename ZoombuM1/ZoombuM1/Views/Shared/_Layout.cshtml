<!DOCTYPE html>
<html lang="fr">
    <head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
        <meta charset="utf-8" />
        <title>Zoombu - @ViewBag.Title</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/themes/bootstrap.css")
        @Styles.Render("~/Content/themes/bootstrap-responsive.css")
        @Scripts.Render("~/bundles/modernizr")
        
        @Scripts.Render("~/Scripts/jquery.js")
        @Scripts.Render("~/Scripts/bootstrap-tab.js")
        @Scripts.Render("~/bundles/jqueryval")
    </head>
    <body>
        <div id="wrap">
		    <div class="navbar navbar-inverse navbar-fixed-top">
		      <div class="navbar-inner">
			     @{
                    if(Request.IsAuthenticated == false){
                        <div class="container" style="height: 100px;">
                            <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
		                        <span class="icon-bar"></span>
		                        <span class="icon-bar"></span>
		                        <span class="icon-bar"></span>
	                        </a>
                            <a class="brand" href="Login"><img src="~/Images/logo.png" alt="Zoombu" style="height: 50px;"/></a>
                             <div class="nav-collapse collapse">
	                        </div>
                            <div>
                                <a href="Register" style="position: absolute; color: #FF0056; font-weight:bold;">Subscribe</a>
                                <p style="margin-left: 90px; margin-top: 70px; border-top: 1px solid #FF0056; color:#333333; font-weight:bold;">
                                    Keep in touch and share information with people around you!
                                </p>
                            </div>
                        </div>
                    }else{
                        <div class="container" style="height: 35px;">
                            <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
		                        <span class="icon-bar"></span>
		                        <span class="icon-bar"></span>
		                        <span class="icon-bar"></span>
	                        </a>
                            <a class="brand" href="/../Home"><img src="~/Images/logo.png" alt="Zoombu" style="height: 28px;"/></a>
                             <div class="nav-collapse collapse">
	                        </div>
                            <span style="float:right; margin-top: 13px; margin-right: -15px;">@Html.ActionLink("Logout", "Index", "Logout")</span>
                            @using (Html.BeginForm("Result", "Search", FormMethod.Post, new { @class = "navbar-search pull-left" }))
                            {
                                @Html.ValidationSummary(true)
                                <input type="text" name="search" class="search-query" placeholder="Search a user or a status">
                                <input type="submit" value="Search" class="btn" style="margin-top: -1px;" />
                            }
                        </div>
                    }
			     }
		      </div>
		    </div>
        </div>
        <div class="container" style="margin-top: 100px; margin-left: 250px;">
            @RenderSection("featured", required: false)
            <div class="row">
                 @RenderBody()
            </div>
	    <div id="push"></div>
	    </div>
    </body>
</html>